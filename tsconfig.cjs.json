{
  "compilerOptions": {
    "lib": [
      "ES2020",
      "ESNext.AsyncIterable",
      "DOM",
      "DOM.Iterable"
    ],
    "target": "ES2015",
    "moduleResolution": "Node",
    "outDir": "cjs",
    "types": [
      "@cloudflare/workers-types",
    ],
    "importHelpers": true,
    "experimentalDecorators": true,
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "module": "CommonJS",
  },
  "include": [
    "typings/*.d.ts",
    "src/**/.ts",
    "src/*.ts"
  ],
  "exclude": [],
}